<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_stock_item"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/item_click_ripple"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_stock_watched_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="华天科技"
        android:textColor="@drawable/text_info_item_selector"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_stock_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="12.85"
        android:textColor="@drawable/text_info_item_selector"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_stock_increase_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="-3.5%"
        android:textColor="@drawable/text_info_item_selector"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_stock_increase_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="-0.42"
        android:textColor="@drawable/text_info_item_selector"
        android:textSize="15sp"/>

</LinearLayout>