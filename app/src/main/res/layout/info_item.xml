<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_info_item"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/item_click_ripple"
    android:clickable="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_info_icon"
        android:layout_width="@dimen/icon_width_normal"
        android:layout_height="@dimen/icon_height_normal"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/tv_info_title"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:textColor="@drawable/text_info_item_selector"-->
        <!--android:textSize="18sp"/>-->

        <!--<TextView-->
        <!--android:id="@+id/tv_info_value"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginTop="35dp"-->
        <!--android:textSize="15sp"/>-->
        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/text_info_item_selector"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_info_update"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_round_corner"
        android:text="修  改"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"/>

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/et_info_update_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:visibility="gone"
        app:floatLabelColor="@color/colorAccent"/>

</RelativeLayout>